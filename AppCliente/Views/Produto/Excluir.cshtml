@model AppProdutoCategoria.AppCliente.Models.ProdutoModel

@{
    ViewData["Title"] = "Excluir Categoria";
}


<h3>Tem certeza que deseja excluir o Produto abaixo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id_Produto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id_Produto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id_Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data_Criacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data_Criacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto_Inativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto_Inativo)
        </dd>
    </dl>

    <form asp-action="Excluir">
        <input type="hidden" asp-for="Id_Produto" />
        <input type="submit" asp-action="Excluir" value="Excluir" class="btn btn-danger" />
    </form>

    <br />

    <form>
        <a asp-action="Index">Voltar para a Lista de Categorias</a>
    </form>
</div>
