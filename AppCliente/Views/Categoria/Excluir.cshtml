@model AppProdutoCategoria.AppCliente.Models.CategoriaModel

@{
    ViewData["Title"] = "Excluir Categoria";
}


<h3>Tem certeza que deseja excluir a Categoria abaixo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id_Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id_Categoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>


    <form asp-action="Excluir">
        <input type="hidden" asp-for="Id_Categoria" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    
    <br/>

    <form >
        <a asp-action="Index">Voltar para a Lista de Categorias</a>
    </form>
</div>
